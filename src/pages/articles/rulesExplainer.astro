---
import ArticleLayout from "../../layouts/ArticleLayout.astro";

import ProfileViewExplainer from "../../components/ProfileViewExplainer.svelte";
import ListViewExplainer from "../../components/ListViewExplainer.svelte";
import QuerySandbox from "../../components/QuerySandbox.svelte";
import JoinExplainer from "../../components/JoinExplainer.svelte";
import featureImage from "../../assets/click_depth.png";
import RulesExplainer from "../../components/RulesExplainer.svelte";

const frontmatter = {
    title: "Visualizing Configurable Joins: A Beginner's Guide to Querying in Slate",
    description:
        "Understand Slate queries by starting with something you already know: the person record.",
    pubDate: "2025-09-22",
    image: featureImage,
    alt: "A diagram showing data flowing from a profile to a list",
};
---

<ArticleLayout {frontmatter}>
    <p>
        Building a report in Slate can feel abstract. This guide makes it clear
        by connecting the query builder to something you use every day: the
        person profile page.
    </p>

    <section class="full-bleed">
        <RulesExplainer client:load />
    </section>
</ArticleLayout>

<style>
    .full-bleed {
        width: 100vw;
        position: relative;
        left: 50%;
        transform: translateX(-50%);
        padding: 1rem;
    }
</style>
