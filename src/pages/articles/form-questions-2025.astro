        }
        .bucket-b_15_19 {
            background-color: #829dbe;
        }
        .bucket-b_20_24 {
            background-color: #385c8a;
        }
        .bucket-gte_25 {
            background-color: #0a2540;
        }

        /* Binary Yes/No Buckets */
        .bucket-y {
            background-color: #0a2540;
        }
        .bucket-n {
            background-color: #829dbe;
        }

        /* SMS Consent Buckets */
        .bucket-consent {
            background-color: #0a2540;
        }
        .bucket-no_consent {
